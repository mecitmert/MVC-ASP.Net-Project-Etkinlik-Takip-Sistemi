@model List<Etkinlik_Takip_Sistemi.Models.Organizatorler>
@{
    ViewBag.Title = "Organizatörler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Organizatorler</h2>

<style>
    table {
        width: 100%;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #3498db;
        color: white;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Adı</th>
            <th>Email</th>
            <!-- Diğer özellikleri ekleyebilirsiniz. -->
        </tr>
    </thead>
    <tbody>
        @foreach (var organizator in Model)
        {
            <tr>
                <td>@organizator.OrganizatorID</td>
                <td>@organizator.Ad</td>
                <td>@organizator.Email</td>
                <!-- Diğer özellikleri ekleyebilirsiniz. -->
            </tr>
        }
    </tbody>
</table>
